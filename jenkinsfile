pipeline {
    agent any
    tools {
        maven 'my_maven'
    }
    stages {
        stage('clone sources') {
            steps {
                git url: 'https://github.com/sachinemrsn1/DevOpsClassCodes.git'
            }
        }
        stage('compile') {
            steps {
                sh 'mvn compile'
            }
        }
        stage('code_review') {
            steps {
                sh 'mvn -P metrics pmd:pmd'
            }
        }
        stage('unit test') {
            steps {
                sh 'mvn test'
            }
        }
        stage('metrics check') {
            steps {
                sh 'mvn cobertura:cobertura -D cobertura.report.format=xml'
            }
        }
        stage('package') {
            steps {
                sh 'mvn package'
            }
        } 
    }
}
